    "scripts": {
        "dev": "gulp",
        "alpha": "ln -sfn ~/Developer/Themes/packages/alpha ~/Developer/ghost-monorepo-test/content/themes && yarn workspace alpha dev",
        "beta": "ln -sfn ~/Developer/Themes/packages/beta ~/Developer/ghost-monorepo-test/content/themes && yarn workspace beta dev",
        "test": "concurrently --kill-others \"yarn workspace alpha test\" \"yarn workspace beta test\"",
